cmd=${1:-shuriken}
maxheight=10


typeset -aU keys confs
choices=""

keys=()
confs=()

for b in ${(f)"$(ls $HOME/.shuriken/keys)"}; do
	local keyname=${b[(ws:.:)1]}
	keys+=($keyname)
done
for c in ${(f)"$(ls $HOME/.shuriken/conf)"}; do
	local conffile=$c
	confs+=($conffile)
done

for k in $keys; do
	choices+="key $k"
done

for c in $confs; do
	choices+="conf $c"
done

height=$(print ${choices} | wc -l)
if [[ $height -gt $maxheight ]]; then 
	heightfit=$maxheight
else 
	heightfit=$height
fi

sel=$(print ${choices} | dmenu -b -i -l $heightfit)

seltype=${sel[(w)1]}
selfile=${sel[(w)2]}

$cmd $selfile $seltype
